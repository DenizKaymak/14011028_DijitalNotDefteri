<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_newNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:ems="10"
        android:hint="Not AdÄ±"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_create"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="128dp"
        android:text="Yeni Not"
        app:layout_constraintStart_toEndOf="@+id/et_newNote"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_notelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Not Listesi"
        app:layout_constraintEnd_toEndOf="@+id/et_newNote"
        app:layout_constraintTop_toBottomOf="@+id/et_newNote" />

</android.support.constraint.ConstraintLayout>